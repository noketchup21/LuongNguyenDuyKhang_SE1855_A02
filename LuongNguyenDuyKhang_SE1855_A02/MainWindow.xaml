<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#f5f5f5">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Welcome to Main Screen" 
                       FontSize="20" FontWeight="Bold" Foreground="#0078D7" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <Button Content="Manage Customers" Width="200" Height="40" Margin="0,0,0,10"
                    Click="ManageCustomers_Click"/>
            <Button Content="Manage Products" Width="200" Height="40" Margin="0,0,0,10"
                    Click="ManageProducts_Click"/>
            <Button Content="Create/View Orders" Width="200" Height="40" Margin="0,0,0,10"
                    Click="ManageOrders_Click"/>
            <Button Content="View Reports" Width="200" Height="40" Margin="0,0,0,10"
                    Click="ViewReports_Click"/>
            <Button Content="Personal Information" Width="200" Height="40"
                    Click="PersonalInformation_Click"/>
        </StackPanel>
    </Grid>
</Window>
